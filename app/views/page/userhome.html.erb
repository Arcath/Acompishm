<h1>Welcome Back!</h1>

<%= render 'shared/infobox' %>

<div class="homebox"><h2><%= current_user.username %></h2>
Linked Accounts:<br />
<% current_user.authentications.each do |auth| %>
	<div id="in-use-auth"><%= image_tag "authbuttons/png/#{auth.provider.gsub(/_/,'')}_32.png" %><strong><%= auth.provider_name %></strong><br /><%= auth.uid %></div>
<% end %>

<%= link_to "Add More", authentications_path %><br />
<%= link_to 'Logout', destroy_user_session_path %></div>
